<%= render 'topnav' %>

<div class="title">
    Listing Blogs
</div>
    
<%= link_to "New Blog", new_blog_path, class: 'new-blog-button' %>
    
<table id="blogs">
  <tr>
    <th>Blog Title</th>
  </tr>
     
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= link_to 'View', blog_path(blog) %></td>
      <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
      <td><%= link_to 'Delete', blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>