<%= render 'topnav' %>

<div class="title">
  Listing Meetings
</div>
    
<%= link_to "Select club to create meeting", clubs_path, class: 'button' %>
    
<table id="clubs">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Contact</th>
  </tr>
     
  <% @meetings.each do |meeting| %>
    <tr>
      <td><%= meeting.purpose %></td>
      <td><%= meeting.timeStamp %></td>
      <td><%= meeting.location %></td>
      </tr>
  <% end %>
</table>