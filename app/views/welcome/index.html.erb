<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="topnav.scss">
    <link rel="stylesheet" href="welcome.scss">
</head>
<body>
    <%= render 'topnav' %>

    <div class="title">
        NINER INTERACT
    </div>
    
    <%= image_tag("unccLogo.jpg", class: 'logo') %>

    <div id="id01" class="modal">
        <%= render 'modal' %>
    </div>
    
    <div class="flex-container">
        <div><%= link_to('Club 1', '/clubs/4') %></div>
        <div><%= link_to('Club 2', '/clubs/5') %></div>
        <div><%= link_to('Club 3', '/clubs/6') %></div>
        <div><%= link_to('Club 4', '/clubs/7') %></div>
        <div><%= link_to('Club 5', '/clubs/8') %></div>
    </div>

    <script>
    var modal = document.getElementById('id01');

    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    </script>
</body>