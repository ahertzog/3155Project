<%= render 'topnav' %>

<div class="title">
    Listing Posts
</div>

<%= link_to "Select Club to Create Post", clubs_path, class: 'button' %>

<% if (current_user) %>
  <table id="wholeTable">
    <tr>
      <th>Post Title</th>
      <th>Post Body</th>
      <ht>
    </tr>
  
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= link_to post.club.name, club_path(post.club) %></td>
  </tr>
  <% end %>
  </table>
<% else %>
  <table id="wholeTable">
    <tr>
      <th>Blog Title</th>
      <th>Blog Body</th>
      <th>
    </tr>
  
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to post.club.name, club_path(post.club) %></td>
    </tr>
  <% end %>
  </table>
<% end %>