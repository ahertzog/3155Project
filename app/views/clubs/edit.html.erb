<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="topnav.scss">
    <link rel="stylesheet" href="clubs.scss">
</head>
<body>

<div class="topnav">
    <%= link_to 'Home', '/welcome/index' %>
    <%= link_to'Clubs', '/clubs' %>
    <%= link_to'Blogs', '/blogs' %>
    <div class="search-container">
    <form action="/action_page.php">
        <input type="text" placeholder="Search.." name="search">
        <button type="submit">Submit</button>
    </form>
    </div>
</div>

<h1>Editing club</h1>
 
<%= form_for :club, url: club_path(@club), method: :patch do |f| %>
 
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@club.errors.count, "error") %> prohibited
        this club from being saved:
      </h2>
      <ul>
        <% @club.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
        Club Name<br>
        <%= f.text_field :clubName %>
    </p>
    
    <p>
        Who We Are<br>
        <%= f.text_area :whoWeAre  %>
    </p>
    
    <p>
        When do you meet?<br>
        <%= month_calendar do |date| %>
          <%= date %>
        <% end %>
        <%= f.text_field :date %>
    </p>
    
    <p>
        Where do you meet?<br>
        <%= f.text_area :location %>
    </p>
    
    <p>
        Contact phone<br>
        <%= f.text_field :phone %>
    </p>
    
    <p>
        Contact email<br>
        <%= f.text_field :email %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
 
<% end %>
 
