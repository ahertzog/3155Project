<%= render 'topnav' %>
    
<div class="title">
  Listing Clubs
</div>

<%= link_to 'New Club', new_club_path, class: 'button'%>
  
  <table id="wholeTable">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Contact</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= club.description %></td>
        <td><%= club.contact %></td>
        <td><%= link_to 'Show', club_path(club) %></td>
        <td><%= link_to 'Edit', edit_club_path(club) %></td>
        <td><%= link_to 'Destroy', club_path(club), method: :delete, data: { confirm: 'Are you sure?' }%></td>
        </tr>
    <% end %>
  </table>
