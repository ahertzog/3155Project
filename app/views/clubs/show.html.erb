<%= render 'topnav' %>

<div class = 'card'>
    <div class = "part">
        <h2>Name</h2>
        <p><%= @club.name %></p>
    </div>
        
    <div class = "part">
        <h2>Description</h2>
        <p><%= @club.description %></p>
    </div>
        
    <div class = "part">
        <h2>Contact</h2>
        <p><%= @club.contact %></p>
    </div>
</div>

<div class='row'>
    <div class= 'column'>
        <div class= 'card'>
            <div class= 'part'>
                <h2>Meetings</h2>
                <%= render @club.meetings %>
            </div>
            
            <div class= 'part'>
                <h2>Add a meeting:</h2>
                <%= render 'meetings/form' %>
            <div>
        </div>
    </div>
        
    <div class= 'column'> 
        <div class= 'card'>
            <div class= 'part'>
                <h2>Posts</h2>
                <%= render @club.posts %>
            </div>
                
            <div class= 'part'>
                <h2>Add a post:</h2>
                <%= render 'posts/form' %>
            </div>
        </div>
    </div>
</div>


<%= link_to 'Back', clubs_path, class: 'button' %>
