<%= render 'topnav' %>

<div class = "title">
    Niner Interact
</div>
    
<div class = "row">
    <div class = "leftcolumn">
        <div class = "card">
            <h2>Name</h2>
            
            <p>
                <%= @club.name %>
            </p>
        </div>
            
        <div class = "card">
            <h2>Description</h2>
            
            <p>
                <%= @club.description %>
            </p>
        </div>
            
        <div class = "card">
            <h2>Contact</h2>
            
            <p>
                <%= @club.contact %>
            </p>
        </div>
    </div>
</div>

<h2>Meetings</h2>

<%= render @club.meetings %>

<h2>Add a meeting:</h2>
<%= render 'meetings/form' %>



<h2>Posts</h2>

<%= render @club.posts %>

<h2>Add a post:</h2>
<%= render 'posts/form' %>



<%= link_to 'Back', clubs_path, class: 'button' %>
